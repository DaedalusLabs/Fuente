FROM debian:bookworm-slim

RUN apt-get -q update && apt-get -q install -y openssh-client rsync
RUN eval $(ssh-agent -s)
RUN mkdir -p ~/.ssh
RUN touch ~/.ssh/config
RUN cp /runner/.ssh/* ~/.ssh/
RUN chmod -R 400 ~/.ssh
RUN ssh-add ~/.ssh/gitlab-deploy
RUN '[[ -f /.dockerinit ]] && echo -e "Host *\n\tStrictHostKeyChecking no\n\n" > ~/.ssh/config'

